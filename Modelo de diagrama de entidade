CREATE TABLE Usuarios (
    id INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(100),
    email VARCHAR(100) UNIQUE
);

CREATE TABLE Credenciais (
    id INT PRIMARY KEY AUTO_INCREMENT,
    usuario_id INT,
    senha VARCHAR(255),
    FOREIGN KEY (usuario_id) REFERENCES Usuarios(id)
);

CREATE TABLE Sessoes (
    id INT PRIMARY KEY AUTO_INCREMENT,
    usuario_id INT,
    data_login DATETIME,
    FOREIGN KEY (usuario_id) REFERENCES Usuarios(id)
);

